{
	"name": "@repo/database",
	"version": "1.0.0",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/client.js"
		}
	},
	"scripts": {
		"dev": "dotenv -e ../../.env -c production tsc -w",
		"build": "npm run clean && tsc && dotenv -e ../../.env -c production -- prisma generate --sql && dotenv -e ../../.env -c production -- prisma migrate deploy",
		"prisma": "dotenv -e ../../.env -c development prisma",
		"prisma:generateSql": "dotenv -e ../../.env -c development -- prisma generate --sql",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@neondatabase/serverless": "^0.10.4",
		"@prisma/adapter-neon": "^6.1.0",
		"@prisma/client": "^6.1.0"
	},
	"devDependencies": {
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.17.0",
		"prisma": "^6.1.0",
		"rimraf": "^6.0.1",
		"tsc": "^2.0.4",
		"typescript": "5.7.2"
	}
}
